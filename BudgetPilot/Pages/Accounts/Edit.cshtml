@page "{id:int}"
@model BudgetPilot.Pages.Accounts.EditModel
@{
    ViewData["Title"] = "Edit Wallet";
}

<h1 class="mb-4">Edit Wallet</h1>

<form method="post">
    <input asp-for="Account.Id" type="hidden" />
    <input asp-for="Account.OwnerId" type="hidden" />

    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Account.Name" class="form-label">Name</label>
        <input asp-for="Account.Name" class="form-control" />
        <span asp-validation-for="Account.Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Account.Balance" class="form-label">Balance</label>
        <input asp-for="Account.Balance" class="form-control" />
        <span asp-validation-for="Account.Balance" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Account.Currency" class="form-label">Currency</label>
        <select asp-for="Account.Currency"
                asp-items="Model.CurrencyOptions"
                class="form-select">
            <option value="">— Select currency —</option>
        </select>
        <span asp-validation-for="Account.Currency" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Account.Type" class="form-label">Type</label>
        <input asp-for="Account.Type" class="form-control" />
        <span asp-validation-for="Account.Type" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Account.Description" class="form-label">Description</label>
        <textarea asp-for="Account.Description" class="form-control"></textarea>
        <span asp-validation-for="Account.Description" class="text-danger"></span>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-page="Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>

<hr class="my-4" />

<form method="post" asp-page="Delete" asp-route-id="@Model.Account.Id"
      onsubmit="return confirm('Are you sure you want to delete this wallet?');">
    <button type="submit" class="btn btn-danger">Delete Wallet</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
