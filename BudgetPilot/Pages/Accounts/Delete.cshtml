@page "{id:int}"
@model BudgetPilot.Pages.Accounts.DeleteModel
@{
    ViewData["Title"] = "Delete Wallet";
}

<h1 class="mb-4">Delete Wallet</h1>
<p>Are you sure you want to delete this wallet?</p>

<dl class="row">
    <dt class="col-sm-2">Name</dt>
    <dd class="col-sm-10">@Model.Account.Name</dd>

    <dt class="col-sm-2">Balance</dt>
    <dd class="col-sm-10">
        @Model.Account.Balance.ToString("N2") @Model.Account.Currency
    </dd>

    <dt class="col-sm-2">Type</dt>
    <dd class="col-sm-10">@Model.Account.Type</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Account.Description</dd>
</dl>

<form method="post" asp-route-id="@Model.Account.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>