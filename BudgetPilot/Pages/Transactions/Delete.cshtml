@page "{id:int}"
@model BudgetPilot.Pages.Transactions.DeleteModel
@{
    ViewData["Title"] = "Delete Transaction";
}

<h1 class="mb-4">Delete Transaction</h1>
<p>Are you sure you want to delete this transaction?</p>

<dl class="row">
    <dt class="col-sm-2">Date</dt>
    <dd class="col-sm-10">@Model.Transaction.Date.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Amount</dt>
    <dd class="col-sm-10">@Model.Transaction.Amount</dd>

    <dt class="col-sm-2">Category</dt>
    <dd class="col-sm-10">@Model.Transaction.Category?.Name</dd>

    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Transaction.Description</dd>

    <dt class="col-sm-2">Account</dt>
    <dd class="col-sm-10">@Model.Transaction.Account?.Name</dd>
</dl>

<form method="post" asp-route-id="@Model.Transaction.Id">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
</form>