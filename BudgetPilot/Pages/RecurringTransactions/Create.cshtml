@page
@model BudgetPilot.Pages.RecurringTransactions.CreateModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "New Recurring Transaction";
}

<h1 class="mb-3">New Recurring Transaction</h1>

<form method="post">
    <div asp-validation-summary="All" class="text-danger mb-3"></div>

    <div class="mb-3">
        <label asp-for="Recurring.NextRunDate" class="form-label">Next Run Date</label>
        <input asp-for="Recurring.NextRunDate" type="date" class="form-control" />
        <span asp-validation-for="Recurring.NextRunDate" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Recurring.Amount" class="form-label">Amount</label>
        <input asp-for="Recurring.Amount" class="form-control" />
        <span asp-validation-for="Recurring.Amount" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="IsIncome" class="form-check-input" type="checkbox" />
        <label asp-for="IsIncome" class="form-check-label">
            Income 
        </label>
    </div>

    <div class="mb-3">
        <label asp-for="Recurring.Frequency" class="form-label">Frequency</label>
        <select asp-for="Recurring.Frequency" class="form-select"
                asp-items="Html.GetEnumSelectList<BudgetPilot.Models.FrequencyType>()">
            <option value="">— select —</option>
        </select>
        <span asp-validation-for="Recurring.Frequency" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Recurring.CategoryId" class="form-label">Category</label>
        <select asp-for="Recurring.CategoryId"
                asp-items="@(new SelectList(Model.Categories, "Id", "Name"))"
                class="form-select">
            <option value="">— select —</option>
        </select>
        <span asp-validation-for="Recurring.CategoryId" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Recurring.Description" class="form-label">Description</label>
        <textarea asp-for="Recurring.Description" class="form-control"></textarea>
        <span asp-validation-for="Recurring.Description" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Recurring.AccountId" class="form-label">Account</label>
        <select asp-for="Recurring.AccountId"
                asp-items="@(new SelectList(Model.Accounts, "Id", "Name"))"
                class="form-select">
            <option value="">— select —</option>
        </select>
        <span asp-validation-for="Recurring.AccountId" class="text-danger"></span>
    </div>

    <div class="form-check mb-3">
        <input asp-for="Recurring.IsActive" class="form-check-input" type="checkbox" checked />
        <label asp-for="Recurring.IsActive" class="form-check-label">Active</label>
    </div>

    <div class="d-flex gap-2">
        <button type="submit" class="btn btn-primary">Create</button>
        <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
