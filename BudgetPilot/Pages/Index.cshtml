@page
@model BudgetPilot.Pages.IndexModel
@{
    ViewData["Title"] = "Welcome to BudgetPilot";
}

<section class="hero text-center py-5 bg-light">
    <div class="container">
        <h1 class="display-4">Take Control of Your Money</h1>
        <p class="lead mb-4">
            BudgetPilot is a simple, secure web platform to track your income, expenses
            and visualize your financial health in real time.
        </p>

        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a class="btn btn-primary btn-lg" asp-page="/Accounts/Index">Go to Dashboard</a>
        }
    </div>
</section>

<section class="features py-5">
    <div class="container">
        <div class="row text-center gx-4 gy-4">
            <div class="col-md-4">
                <div class="p-4 border rounded">
                    <div class="mb-3" style="font-size:3rem;">💰</div>
                    <h3>Multiple Wallets</h3>
                    <p>Create cash, card or e-wallet accounts and see all balances in one place.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded">
                    <div class="mb-3" style="font-size:3rem;">📊</div>
                    <h3>Smart Analytics</h3>
                    <p>Visualize spending by category, track trends, export reports to PDF.</p>
                </div>
            </div>
            <div class="col-md-4">
                <div class="p-4 border rounded">
                    <div class="mb-3" style="font-size:3rem;">🛡️</div>
                    <h3>Secure & Private</h3>
                    <p>Your data stays yours—no third-party integrations, full SSL encryption.</p>
                </div>
            </div>
        </div>
    </div>
</section>

<section class="cta text-center py-5 bg-primary text-white">
    <div class="container">
        <h2 class="mb-3">Ready to pilot your budget?</h2>
        @if (User.Identity?.IsAuthenticated ?? false)
        {
            <a class="btn btn-light btn-lg" asp-page="/Transactions/Index">Manage Transactions</a>
        }
    </div>
</section>
